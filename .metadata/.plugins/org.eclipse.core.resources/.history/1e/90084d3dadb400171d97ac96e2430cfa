<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<!-- 配置常量 
		修改常量的位置
		struts.xml文件里面设置
		web.xml文件里设置
	-->
	<!-- 修改后缀 -->
	<!-- <constant name="struts.action.extension" value="do,,"></constant>	 -->
	<!-- 修改上传文件的大小 -->
	<!-- <constant name="struts.multipart.maxSize" value="121253456469"></constant> -->
	<!-- 
		package ： 
			name 取值，理论上随意,唯一
			namespace 名称空间    / 代表根目录
			extends = struts-default 继承的是struts-default.xml 文件
	 -->
    <package name="default" namespace="/" extends="struts-default">
		<!--  
			action ： 
				name : 访问的地址  唯一
				class : 目标类的全类名
				method : 目标类的方法名
		-->
		<action name="hello" class="com.ithc.demo1.HelloAction" method="sayHello">
			<!-- 
				result：
				name : name的值与我们方法返回值一致
				如果方法返回一个null 或者 NONE(框架提供的)，代表没有返回，可以不写result
				
				默认情况下是转发
			 -->
			<result name="ok">/jsp/demo1.jsp</result>
		</action>

    </package>
    
    <!-- POJO类 -->
    <package name="one" namespace="/" extends="struts-default">
    	
    	<action name="userSave" class="com.ithc.one.UserAction" method="save"></action>
    	<action name="userUpdate" class="com.ithc.one.UserAction" method="update"></action>
    	<!--  
    		如果配置里面不写 method属性
    		就会去访问execute方法(默认的)
    	-->
    	<action name="user" class="com.ithc.one.UserAction">
    		<result name="ok">/jsp/demo1.jsp</result>
    	</action>
    	
    </package>
    
    <package name="two" namespace="/" extends="struts-default">
    	<action name="customer" class="com.ithc.two.CustomerAction"></action>
    		
    	<action name="customerDetele" class="com.ithc.two.CustomerAction" method="delete"></action>	
    		
    	<action name="customera" class="com.ithc.two.CustomerAction" method="a">
    	<!-- 
    		如果方法返回的是 SUCCESS name属性的值可以省略不写
    	 -->
    		<result>/jsp/demo1.jsp</result>
    	</action>
    </package>
    
    <package name="three" namespace="/" extends="struts-default">
    	<action name="phoneNumber" class="com.ithc.three.PhoneNumber"></action>
    	<action name="phoneNumberUpdate" class="com.ithc.three.PhoneNumber" method="update"></action>
    	
    	<action name="phoneNumberLogin" class="com.ithc.three.PhoneNumber" method="login">
    		<result name="login" type="redirect">/jsp/login.jsp</result>
    	</action>
    	
    	<action name="phoneNumberError" class="com.ithc.three.PhoneNumber" method="error">
    		<result name="error">/jsp/error.jsp</result>
    	</action>
    	
    </package>
    
    <package name="four" namespace="/" extends="struts-default">
    
    	<action name="linkMan_*" class="com.ithc.four.LinkMan" method="{1}">
    		<result name="login">/jsp/login.jsp</result>
    	</action>	
    				
    </package>
    
    <!-- 动态加载方法 -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <package name="five" namespace="/" extends="struts-default">
    
    	<action name="kaitou" class="com.ithc.five.Order">
    		<result>/jsp/login.jsp</result>
    	</action>
    
    
    </package>
    
    
    
    
    <include file="struts2.xml"></include>
    
    
    


</struts>
