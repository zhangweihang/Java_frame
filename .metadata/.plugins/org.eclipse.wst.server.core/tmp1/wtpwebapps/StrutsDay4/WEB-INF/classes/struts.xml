<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!--设置文件大小 -->
	<constant name="struts.multipart.maxSize" value="209715200" />


	<package name="file" namespace="/" extends="struts-default">
		<!-- 单个文件上传 -->
		<action name="testFile" class="com.ithc.file.TestFile">
			<!-- 请求的过程中出错，被拦截器截获 ，并没有去访问我们的action -->
			<result name="input">error.jsp</result>
			<interceptor-ref name="defaultStack">
				<!-- 设置文件上传类型 -->
				<param name="fileUpload.allowedExtensions">.jpg,.txt</param>
			</interceptor-ref>
		</action>

		<!--多个文件上传 -->
		<action name="testFiles" class="com.ithc.file.TestFiles">
			<!-- 请求的过程中出错，被拦截器截获 ，并没有去访问我们的action -->
			<result name="input">error.jsp</result>
			<interceptor-ref name="defaultStack">
				<!-- 设置文件上传类型 -->
				<param name="fileUpload.allowedExtensions">.jpg,.txt</param>
			</interceptor-ref>
		</action>

		<!-- 测试重复提交 -->
		<action name="testSubmit" class="com.ithc.submit.TestSubmit">
		
			<!-- 配置拦截器 -->
			<interceptor-ref name="token"/>
			<interceptor-ref name="defaultStack"/>
			<!-- 提交成功 -->
			<result>/success.jsp</result>
			<!-- 重复提交 -->
			<result name="invalid.token">submit.jsp</result>
			<!-- 提交错误回到提交页面 -->
			<result name="input">testSubmit.jsp</result>
			
		</action>
		
		<!-- 使用日期插件 -->
		<action name="testDate" class="com.ithc.date.TestDate">
		
		</action>
		



	</package>











</struts>
